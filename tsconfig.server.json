{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist/server",
    "rootDir": "server",
    "isolatedModules": false,
    "noEmit": false,
    "types": ["node"],
    "baseUrl": "./",
    "paths": {
      "@shared/*": ["server/shared/*"]
    }
  },
  "include": ["server/**/*.ts"],
  "exclude": ["client", "dist", "node_modules", "server/tests", "**/*.test.ts"]
}
