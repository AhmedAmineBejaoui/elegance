{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist/public",
  "functions": {
    "api/[...all].js": {
      "runtime": "node@20"
    }
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/[...all]" },
    { "src": "/assets/(.*)", "dest": "/assets/$1" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "env": {
    "ROLLUP_SKIP_NODEJS_NATIVE": "1"
  }
}
