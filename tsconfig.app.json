{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist/public",
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "@/*": ["client/src/*"],
      "@shared/*": ["shared/*"]
    }
  },
  "include": ["client/**/*", "vite.config.*"],
  "exclude": ["server", "dist", "node_modules"]
}
